<div class="row px-4 px-lg-3 pb-3 justify-content-center text-center" style="min-width: 200px;">
  <div class="my-auto text-center mb-1">
    {{ this.args.label }}
    {%- if this.args.description %}
      <sup data-toggle="tooltip" title="{{ this.args.description }}"><i class="far fa-question-circle"></i></sup>
    {% endif -%}
  </div>
  <div class="pt-1 pt-lg-0 mx-auto justify-content-center text-center">
    <div class="border-grey rounded d-table overflow-hidden my-auto justify-content-center mx-auto">
      <input type="radio" id="{{ this.args.name }}-yes" name="{{ this.args.name }}" class="d-none" value="yes"  {% if this.value %} checked{% endif %}>
      <label for="{{ this.args.name }}-yes" class="radio-label px-2 py-1 cursor-pointer d-table-cell">{{ this.args.yes_label or 'Yes' }}</label>
      <input type="radio" id="{{ this.args.name }}-no" name="{{ this.args.name }}" value="no" class="d-none" {% if not this.value %} checked{% endif %}>
      <label for="{{ this.args.name }}-no" class="radio-label px-2 py-1 cursor-pointer d-table-cell">{{ this.args.no_label or 'No' }}</label>
    </div>
  </div>
</div>

