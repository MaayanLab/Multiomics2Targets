<div class="col px-4 px-lg-3 pb-4">
  <div class="bold text-center my-auto mb-1">
    {{ this.args.label }}
    {%- if this.args.description %}
      <sup data-toggle="tooltip" title="{{ this.args.description }}"><i class="far fa-question-circle"></i></sup>
    {% endif -%}
  </div>
  <div class="mx-auto">
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-4 pt-2 pt-lg-0 mx-auto">
      <input
        id="{{ this.args.name }}"
        type="number"
        name="{{ this.args.name }}"
        class="form-control nodecoration tiny bg-white px-2 py-1 mb-0"
        placeholder="{{ this.args.hint }}"
        step="{{ this.args.step or 0.1 }}"
        value="{{ this.args.default }}"
        max="{{ this.args.max }}"
        min="{{ this.args.min }}"
      />
    </div>
  </div>
</div>