{% extends "bootstrap/form.j2" %}

{% block head %}
{{ super() }}
{% endblock %}

{% block style %}
{{ super() }}
{% endblock %}

{% block body %}
<div class="row justify-content-center" style="width:100%; font-family: 'Open Sans';">
    <div class="container col-8">
        <div class="mb-5 mt-2 mx-0 row align-items-center">
            <div class="col-3">
                <img src="{{ url_for('static', filename='x2ktr.png') }}" style="width:175px"
                    class="img-fluid float-right">
            </div>
            <div class="col-7 text-center">
                <h1 style="font-weight: bolder; color: rgb(0, 0, 79);"> MULTIOMICS2PAPER </h1>
                <p class="my-0">Upload transcriptomics, proteomics, and/or phosphoproteomics data matrices from a matching cohort of cancer patients to receive a complete data analysis report that resembles a research publication.</p>
            </div>
        </div>
    </div>
</div>

<div class="text-center justify-content-center mx-auto">
    <div class="row">
        <div class="col-12">
            <div class="container col-10" style="font-size: 14px !important;">
                <form method="POST" enctype="multipart/form-data" action="">
                    
                    {{ _fields[0].render() }}
                    <div class="row">
                    {% for _field in _fields[1:3] %}
                        <div class="col">
                            {{ _field.render() }}
                        </div>
                    {% endfor %}
                    </div>
                    <div class="row">
                    {% for _field in _fields[3:5] %}
                        <div class="col">
                        {{ _field.render() }}
                        </div>
                    {% endfor %}
                    </div>
                    <div class="row">
                    {% for _field in _fields[5:7] %}
                        <div class="col">
                        {{ _field.render() }}
                        </div>
                    {% endfor %}
                    </div>
                    <div class="row">
                    {% for _field in _fields[7:9] %}
                        <div class="col">
                        {{ _field.render() }}
                        </div>
                    {% endfor %}
                    </div>
                    <button class="btn mb-3" style="background-color:rgba(255, 255, 255, 0); border-style: solid; border-color:rgb(121, 140, 248) ; border-width: 1px; color:rgb(87, 113, 255);" 
                    onclick="loadAllExamples()" type="button"> Load All Examples</button>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="submit" value="Submit" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}


{% block script %}
{{ super() }}

<script>
    const textbtn = document.getElementsByClassName('text-btn');

    function loadAllExamples() {
        for (let i = 0; i < textbtn.length; i++) {
            textbtn[i].click();
        }
    }

    $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip({'delay': { show: 50, hide: 3000 }
    });   
});
</script>
{% endblock %}


